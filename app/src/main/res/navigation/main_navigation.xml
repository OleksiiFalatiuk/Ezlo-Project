<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.ezloproject.ui.splash.SplashFragment"
        android:label="SplashFragment"/>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.ezloproject.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_itemDetailsFragment"
            app:destination="@id/itemDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailsFragment"
        android:name="com.example.ezloproject.ui.details.ItemDetailsFragment"
        android:label="ItemDetailsFragment" >
        <argument
            android:name="itemId"
            app:argType="integer" />
        <argument
            android:name="isEditMode"
            app:argType="boolean" />
    </fragment>
</navigation>